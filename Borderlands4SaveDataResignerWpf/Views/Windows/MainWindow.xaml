<Window x:Class="Borderlands4SaveDataResignerWpf.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Borderlands4SaveDataResignerWpf.ControlProperties"
        xmlns:w="clr-namespace:Borderlands4SaveDataResignerWpf.Views.Windows"
        Title="{Binding ViewModel.MyAppInfo.Name, Mode=OneWay}"
        d:Title="AppTitle"
        d:DesignHeight="270"
        Height="270" 
        d:DesignWidth="730"
        Width="730"
        ResizeMode="CanMinimize"
        d:DataContext="{d:DesignInstance w:MainWindow, IsDesignTimeCreatable=False}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Page Content  -->
        <Grid Margin="5,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  Left Side  -->
            <StackPanel>
                <!--  Input Folder Path  -->
                <StackPanel Margin="5,0,5,10">
                    <Label Content="Input Folder Path" />
                    <Grid
                    p:DropProperties.DropOperationType="GetInputPath"
                    AllowDrop="True"
                    Drop="FileDrop_Drop"
                    PreviewDragEnter="FileDrop_PreviewDragEnter"
                    PreviewDragOver="FileDrop_PreviewDragOver">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox FontSize="13" Text="{Binding ViewModel.InputFolderPath, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                        <Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Command="{Binding ViewModel.SelectInputFolderPathCommand}"
                        Content="📁"
                        ToolTip="Open the File Selector" />
                    </Grid>
                </StackPanel>
                <!--  UserId  -->
                <Grid Margin="5,0,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--  Left  -->
                    <StackPanel>
                        <TextBlock Margin="0,0,0,5">
                        <Run Text="User ID" />
                        <Bold>
                            <Run Text="(INPUT)" />
                        </Bold>
                        </TextBlock>
                        <TextBox Text="{Binding ViewModel.UserIdInput, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    </StackPanel>
                    <!--  Interchange  -->
                    <Button
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Bottom"
                    Command="{Binding ViewModel.SwapUserIdsCommand}"
                    Content="⧓"
                    ToolTip="Interchange" />
                    <!--  Right  -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Margin="0,0,0,5">
                        <Run Text="User ID" />
                        <Bold>
                            <Run Text="(OUTPUT)" />
                        </Bold>
                        </TextBlock>
                        <TextBox Text="{Binding ViewModel.UserIdOutput, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    </StackPanel>
                </Grid>
                <!--  Action Buttons  -->
                <Grid Margin="5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Visibility="{Binding ViewModel.SuperUserManager.IsSuperUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="📦 Decrypt All" Command="{Binding ViewModel.DecryptAllCommand}"/>
                        <Button Margin="10,0" Content="📦 Encrypt All" Command="{Binding ViewModel.EncryptAllCommand}"/>
                    </StackPanel>
                    <Button
                    Grid.Column="1"
                    Margin="10,0"
                    Content="🚫 Abort"
                    Style="{DynamicResource AccentButtonStyle}"
                    Command="{Binding ViewModel.AbortActionCommand}"
                    Visibility="{Binding ViewModel.IsAbortAllowed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="🖊️ Resign All" Command="{Binding ViewModel.ResignAllCommand}"/>
                        <Button
                        Margin="10,0,0,0"
                        Command="{Binding ViewModel.OpenOutputDirectoryCommand}"
                        Content="📂"
                        ToolTip="Open the Output Directory" />
                    </StackPanel>
                </Grid>
            </StackPanel>
            <!--  Right Side  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image
                Margin="0,0,0,10"
                Source="pack://application:,,,/Resources/Images/AppLogo.png"
                UseLayoutRounding="True"
                RenderOptions.BitmapScalingMode="HighQuality"
                SnapsToDevicePixels="True"
                />
                <Grid Grid.Row="1" HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    d:Content="v0.0.0.0"
                    Content="{Binding ViewModel.AppVersion, Mode=OneWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding ViewModel.SuperUserManager.SuperUserTriggerClickCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Label>
                    <Label
                    Grid.Row="1"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    d:Content="Mi5hmasH 3000"
                    Content="{Binding ViewModel.MyAppInfo.Author, Mode=OneWay}"
                    Cursor="Hand"
                    FontSize="11">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding ViewModel.VisitAuthorsGithubCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Label>
                </Grid>
            </Grid>
        </Grid>
        <!--  StatusBar  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ProgressBar
            Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}"
            Padding="0"
            d:Value="100"
            Value="{Binding ViewModel.ProgressValue}"
            Background="Transparent"
            IsIndeterminate="{Binding ViewModel.IsBusy}" />
            <StatusBar
            Grid.Row="1"
            Margin="0"
            Padding="0">
                <TextBlock d:Text="Status" Text="{Binding ViewModel.ProgressText}" />
            </StatusBar>
        </Grid>
    </Grid>
</Window>
